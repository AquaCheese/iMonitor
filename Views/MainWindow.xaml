<Window x:Class="iMonitor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iMonitor.Views"
        mc:Ignorable="d"
        Title="iMonitor - External Device Monitor" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="500">

    <Window.Resources>
        <local:ConnectButtonTextConverter x:Key="ConnectButtonTextConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="DeviceCardStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Image Source="/Resources/logo.jpg" Width="48" Height="48" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="iMonitor" Style="{StaticResource HeaderTextStyle}" FontSize="24"/>
                <TextBlock Text="External Device Monitor" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1">
            <!-- Devices Tab -->
            <TabItem Header="Connected Devices">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Device Status Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Detected Devices:" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock x:Name="DeviceCountText" Text="0 devices" VerticalAlignment="Bottom" Margin="10,0,0,2" Foreground="Gray"/>
                        <Button x:Name="RefreshButton" Content="Refresh" Margin="20,0,0,0" Padding="10,5" Click="RefreshButton_Click"/>
                    </StackPanel>

                    <!-- Devices List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="DevicesItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource DeviceCardStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Description}" Foreground="Gray" Margin="0,0,0,5"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Status: " FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Status}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Type: " FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Type}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Manufacturer: " FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Manufacturer}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button x:Name="ConnectButton" 
                                                       Content="{Binding IsConnectedAsMonitor, Converter={StaticResource ConnectButtonTextConverter}}"
                                                       Padding="15,8" 
                                                       Margin="5,0,0,0"
                                                       Click="ConnectButton_Click"
                                                       Tag="{Binding}"
                                                       IsEnabled="{Binding CanBeUsedAsMonitor}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- No Devices Message -->
                    <TextBlock x:Name="NoDevicesMessage" 
                              Grid.Row="1"
                              Text="No compatible devices detected. Connect a phone, tablet, or external monitor to get started."
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              FontSize="16" 
                              Foreground="Gray"
                              Visibility="Collapsed"/>
                </Grid>
            </TabItem>

            <!-- Display Settings Tab -->
            <TabItem Header="Display Settings">
                <StackPanel Margin="20">
                    <TextBlock Text="Display Configuration" Style="{StaticResource HeaderTextStyle}"/>
                    
                    <GroupBox Header="Current Displays" Margin="0,0,0,20">
                        <ListBox x:Name="DisplaysListBox" Height="200" Margin="10">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayText}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding DeviceName}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>

                    <Button x:Name="RefreshDisplaysButton" Content="Refresh Displays" 
                           Width="150" HorizontalAlignment="Left" Padding="10,5" 
                           Click="RefreshDisplaysButton_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <StackPanel Margin="20">
                    <TextBlock Text="Application Settings" Style="{StaticResource HeaderTextStyle}"/>
                    
                    <CheckBox x:Name="StartWithWindowsCheckBox" 
                             Content="Start with Windows" 
                             Margin="0,10,0,10"
                             Checked="StartWithWindowsCheckBox_Checked"
                             Unchecked="StartWithWindowsCheckBox_Unchecked"/>
                    
                    <CheckBox x:Name="ShowNotificationsCheckBox" 
                             Content="Show device connection notifications" 
                             Margin="0,0,0,10"
                             IsChecked="True"
                             Checked="ShowNotificationsCheckBox_Checked"
                             Unchecked="ShowNotificationsCheckBox_Unchecked"/>
                    
                    <CheckBox x:Name="MinimizeToTrayCheckBox" 
                             Content="Minimize to system tray" 
                             Margin="0,0,0,20"
                             IsChecked="True"/>

                    <Separator Margin="0,10"/>
                    
                    <TextBlock Text="About" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBlock Text="iMonitor v1.0" Margin="0,0,0,5"/>
                    <TextBlock Text="External Device Display Monitor" Foreground="Gray"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Last updated: "/>
                    <TextBlock x:Name="LastUpdatedText" Text="{Binding LastUpdated}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>