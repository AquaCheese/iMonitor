{
  "name": "imonitor",
  "version": "1.0.0",
  "description": "Cross-platform solution for using mobile devices as extended displays",
  "main": "index.js",
  "scripts": {
    "install-all": "npm run install-desktop && npm run install-web && npm run install-mobile",
    "install-desktop": "cd desktop-server && npm install",
    "install-web": "cd web-client && npm install",
    "install-mobile": "cd mobile-client && npm install",
    "start-desktop": "cd desktop-server && npm start",
    "start-web": "cd web-client && npm start",
    "build-all": "npm run build-desktop && npm run build-web",
    "build-desktop": "cd desktop-server && npm run build",
    "build-web": "cd web-client && npm run build"
  },
  "keywords": [
    "display",
    "mobile",
    "ipad",
    "extended-display",
    "screen-sharing",
    "electron",
    "react-native"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AquaCheese/iMonitor.git"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
